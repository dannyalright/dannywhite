{% extends "layouts/base.njk" %}

{% if clientJS %}
{% block headContent %}
  {% for item in clientJS %}
  <script defer src="/js/{{ item }}"></script>
  {% endfor %}
{% endblock %}
{% endif %}

{% block bodyContent %}
<main class="note">
    <article>
        <header>
            <h1>{{ title }}</h1>
            <time itemprop="dateCreated datePublished" datetime="{{ date | w3PostDate }}" class="small-text">{{ date | postDate }}</time>
        </header>
        <div class="article-content">
            {{ content | safe }}
        </div>
    </article>
</main>
{% endblock %}
