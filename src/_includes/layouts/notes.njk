{% extends "layouts/base.njk" %}

{% block bodyContent %}
<main>
    <header>
        <h1>{{ title }}</h1>
        <p>{{ subtitle }}</p>
    </header>
    <div>
        <section>
        <h2>Guides</h2>
        {% for subject, guides in collections.guidesBySubject %}
        <h3>{{ subject }}</h3>
        <ul>
            {% for item in guides | reverse %}
            <li><a href="{{ item.url }}">{{ item.data.title }}</a></li>
            {% endfor %}
        </ul>
        </section>
        {% endfor %}
    </div>
</main>
{% endblock %}
